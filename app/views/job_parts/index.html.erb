<p id="notice"><%= notice %></p>

<h1>Listing Job Parts</h1>

<table>
  <thead>
    <tr>
      <th>Job</th>
      <th>Part</th>
      <th>Quantity</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @job_parts.each do |job_part| %>
      <tr>
        <td><%= job_part.job_id %></td>
        <td><%= job_part.part_id %></td>
        <td><%= job_part.quantity %></td>
        <td><%= link_to 'Show', job_part %></td>
        <td><%= link_to 'Edit', edit_job_part_path(job_part) %></td>
        <td><%= link_to 'Destroy', job_part, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

