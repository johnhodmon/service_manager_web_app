<% provide(:side_content, 'layouts/blank')%>
<div class="row">
<div class="col-md-4">
</div>
<div class="col-md-4">

<h1>Edit Customer</h1>

<%= form_for(@customer) do|f| %>
<%= f.label :name %>
<%= f.text_field :name %>
<%= f.label :street %>
<%= f.text_field :street %>
<%= f.label :town %>
<%= f.text_field :town %>
<%= f.label :county %>
<%= f.text_field :county %>
<%= f.label :phone %>
<%= f.text_field :phone %>
<%= f.label :email %>
<%= f.text_field :email %>
<%= f.label :latlng,"Coordinates" %>
<%= f.text_field :lat_lng %>

<%= f.submit "Edit Customer" %>


<% end %>
</div>
<div class="col-md-4">
</div>
</div>


