
 
   <!DOCTYPE html>
    <html>
      <head>
        <title>Ruby on Rails Tutorial Sample App | <%= yield(:title) %></title>
        <%= stylesheet_link_tag 'application', media: 'all',
                                               'data-turbolinks-track' => true %>
        <%= javascript_include_tag 'application', 'data-turbolinks-track' => true %>
        <%= csrf_meta_tags %>
        <!--[if lt IE 9]>
          <script src="//cdnjs.cloudflare.com/ajax/libs/html5shiv/r29/html5.min.js">
          </script>
        <![endif]-->
      </head>
      <body>


        <div class="container">
       <%= render 'layouts/header' %>
     
       <div class="row">

       <div class=" col-md-3 side-pane">
       <%= image_tag("Machine-banner1.jpg", alt: "Company logo") %>
         <%= render yield(:side_content) %>
       </div>
         <div class=" col-md-9 main-pane">
<ul class="nav nav-tabs nav_project">
 
  
   <li  role="presentation" class=<%= 'active' if params[:controller] == 'jobs' %>><%= link_to "Jobs", 'jobs' %></li>
  <li role="presentation" class=<%= 'active' if params[:controller] == 'customers' %>><%= link_to "Customers",customer_path(id:1)%></li>
   <li role="presentation"class=<%= 'active' if params[:controller] == 'products' %>><%= link_to "Products", 'products' %></li>
    <li role="presentation"class=<%= 'active' if params[:controller] == 'invoices' %>><%= link_to "Invoices", 'invoices' %></li>
     <li role="presentation"class=<%= 'active' if params[:controller] == 'parts' %>><%= link_to "Stock Control", 'parts' %></li>

   
 
 <ul class="nav navbar-nav navbar-right ">
      
       <% if logged_in? %>
        <li class="dropdown">
          <a href="#" class="dropdown-toggle nav_project" data-toggle="dropdown" role="button" aria-haspopup="true" aria-expanded="false">John Hodmon <span class="caret"></span></a>
          <ul class="dropdown-menu ">
            <li><a href="#">Action</a></li>
            <li><a href="#">Another action</a></li>
            <li><a href="#">Something else here</a></li>
            <li role="separator" class="divider"></li>
            <li><a href="#">Separated link</a></li>
          </ul>
        </li>
          <% else %>
              <li><%= link_to "Log in", login_path %></li>
            <% end %>
      </ul>
</ul>
       
        <% flash.each do |message_type, message| %>
        <div class= "alert alert-<%= message_type %>">
        <%= message %>
        </div>
        <% end %>
          <%= yield %>
         
       </div>
        </div>
        </div>

      </body>
    </html>
   

