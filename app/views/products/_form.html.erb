<%= form_for(@product) do |f| %>

      


  <div class="form-group">
    <%= f.label :product_number %><br>
    <%= f.text_field :product_number %>
  </div>
  <div class="form-group">
    <%= f.label :description %><br>
    <%= f.text_field :description %>
  </div>
  <div class="form-group">
    <%= f.label :manufacturer_id %><br>
   
<%= f.collection_select :manufacturer_id,Manufacturer.all,:id,:name, include_blank:"Select Manufacturer"  %>
  </div>
  
   <%= f.submit "Create Product",:class=>"btn btn-primary" %>

<% end %>
