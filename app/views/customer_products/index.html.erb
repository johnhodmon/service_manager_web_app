<p id="notice"><%= notice %></p>
<% provide(:side_content, 'layouts/blank')%> 

<h1>Listing Customer Products</h1>

<table>
  <thead>
    <tr>
      <th>Customer</th>
      <th>Product</th>
      <th>Serial number</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @customer_products.each do |customer_product| %>
      <tr>
        <td><%= customer_product.customer_id %></td>
        <td><%= customer_product.product_id %></td>
        <td><%= customer_product.serial_number %></td>
        <td><%= link_to 'Show', customer_product %></td>
        <td><%= link_to 'Edit', edit_customer_product_path(customer_product) %></td>
        <td><%= link_to 'Destroy', customer_product, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'New Customer product', new_customer_product_path %>
